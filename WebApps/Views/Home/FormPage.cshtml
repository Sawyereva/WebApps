@model Movie

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>The Joel Hilton Film Collection</p>
    <h5>Use the form below to add films to the collection!</h5>
</div>

<form method="post">
    <input asp-for="MovieId" type="hidden"/>

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required />
    <br />
    <select asp-for="CategoryId">
        <option value="">Select A Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Year">Year:</label>
    <input type="number" asp-for="Year" required min="1888"/>
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"/>
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="">-Select-</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="UR">UR</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-MA">TV-MA</option>
    </select>
    <br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" required>
        <option value=null>-Select-</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex" required>
        <option value=null>-Select-</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25"/>
    <br />

    <button type="submit">Add Movie</button>
</form>