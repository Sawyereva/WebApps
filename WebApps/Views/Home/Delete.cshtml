@{
}


@model Movie


<p>Are you sure you want to delete this record?</p>

<p>Data to Be deleted:</p>
<p>Category: @Model.CategoryId</p>
<p>Title: @Model.Title</p>
<p>Year: @Model.Year</p>
<p>Director: @Model.Director</p>
<p>Rating: @Model.Rating</p>
<p>Edited: @Model.Edited</p>
<p>Lent To: @Model.LentTo</p>
<p>Notes: @Model.Notes</p>
<br /><br />
<form method ="post">
    <button class="btn btn-danger" asp-controller="Home" asp-action="Delete">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="Movies">Cancel</a>
    <input asp-for="MovieId" type="hidden" />
</form>